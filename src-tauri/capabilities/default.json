{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Pandoc GUI default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:default",
    "http:default",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        { "url": "https://api.github.com/**" },
        { "url": "https://github.com/**" }
      ]
    }
  ]
}
